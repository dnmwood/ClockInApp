<section id="home-page">
  <div class="container">
    <!-- New User Registration -->
    <% if !user_signed_in? %>
      <h1 class="header">Welcome to
        <span class="header-text">CL<i class="far fa-clock"></i>CKIN</span>
      </h1>
      <h2 class="not-signed-up">Not signed up yet?</h2>
      <%= button_to "Sign Up Here!", new_user_registration_path, class: "log-btn sign-up", method: :get %>

    <!-- Main application -->
    <% else %>
      <% if !current_user.clocked_in %>
        <%= render 'new' %>
      <% else %>
        <%= render 'clock_out' %>
      <% end %>
      <!-- We're showing login information only when the user has
      logged existing shifts, and when the user is clocked out -->
      <% if current_user.shifts.any? && !current_user.clocked_in  %>
        <%= render 'table' %>
      <% end %>

    <% end %>
  </div>
</section>
